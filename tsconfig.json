{
    "compilerOptions": {
        "strictPropertyInitialization": false,
        "strict": true,
        "module": "commonjs",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "target": "es2017",
        "outDir": "./src/dist",
        "incremental": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "declarationMap": false
    },
    "include": ["src/server"]
}
