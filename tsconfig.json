{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "target": "es2017",
        "outDir": "./dist",
        "incremental": true,
        "jsx": "preserve",
        "esModuleInterop": true
    },
    "include": ["src/server"]
}
